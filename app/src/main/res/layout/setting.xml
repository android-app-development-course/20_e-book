<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eceff1"
    tools:context="com.example.gecko.ereader.settingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#333745"
        app:theme="@style/MyCustomToolBarStyle">

    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:layout_below="@+id/main_toolbar"
        android:layout_marginTop="70dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:id="@+id/sl2"
        android:layout_height="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="25dp"
            android:text="意见反馈"
            android:id="@+id/fankui"
            android:textColor="#000000"
            android:textSize="20dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/sl2"
        android:layout_marginTop="0.5dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:id="@+id/sl3"
        android:layout_height="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="25dp"
            android:text="关于"
            android:id="@+id/about_button"
            android:textColor="#000000"
            android:textSize="20dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/sl3"
        android:layout_marginTop="0.5dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:id="@+id/sl4"
        android:layout_height="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="25dp"
            android:text="用户协议"
            android:id="@+id/agreenment"
            android:textColor="#000000"
            android:textSize="20dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:text="version1.0"
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/back2"
        android:text="设置"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:layout_marginLeft="31dp"
        android:layout_toRightOf="@+id/back2" />

    <TextView
        android:id="@+id/back2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/TV"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/ic_arrow_back_black_24dp" />


</RelativeLayout>
