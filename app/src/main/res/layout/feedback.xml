<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gecko.ereader.FeedbackActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/about_toolbar1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#333745"
        app:theme="@style/MyCustomToolBarStyle">
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_marginTop="80dp"
        android:background="#ffffff"
        android:id="@+id/f1"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="25dp"
            android:text="账号问题"
            android:textColor="#000000"
            android:textSize="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/f1"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:id="@+id/f2"
        android:layout_height="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="25dp"
            android:text="优化建议"
            android:id="@+id/suggest_button"
            android:textColor="#000000"
            android:textSize="20dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/f2"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:id="@+id/f3"
        android:layout_height="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="25dp"
            android:text="我的反馈"
            android:id="@+id/myfeedback_button"
            android:textColor="#000000"
            android:textSize="20dp" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:text="version1.0"
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:text="意见反馈"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:layout_marginLeft="60dp" />

    <TextView
        android:id="@+id/back4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/ic_arrow_back_black_24dp" />

</RelativeLayout>
